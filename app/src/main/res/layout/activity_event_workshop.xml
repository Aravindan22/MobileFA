<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:theme="@style/Background">

    <TextView
        android:id="@+id/activity_workshop_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/workshop_title"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_margin="40dp"
        android:textAlignment="center"
        android:theme="@style/Heading" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="@string/workshop_topic"
        android:id="@+id/activity_event_workshop_topic_edittext"
        android:inputType="text"
        android:layout_margin="10dp"
        android:theme="@style/EditText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="@string/workshop_clg"
        android:id="@+id/activity_event_workshop_clg_edittext"
        android:inputType="text"
        android:layout_margin="10dp"
        android:theme="@style/EditText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/activity_event_workshop_date_edittext"
        android:clickable="true"
        android:focusable="false"
        android:hint="@string/workshop_date"
        android:layout_margin="10dp"
        android:theme="@style/EditText" />
    <TextView
        android:id="@+id/activity_workshop_course_upload_info"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/workshop_certificate"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/activity_workshop_course_upload_button"
        android:layout_width="110dp"
        android:layout_height="46dp"
        app:srcCompat="@drawable/ic_upload" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/workshop_submit"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/activity_event_workshop_submit_button"
        android:background="@drawable/button_shape"
        android:textColor="@color/buttonText" />

</LinearLayout>
