<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#deecfc"
    android:padding="10dp" >

    <TextView
        android:id="@+id/activity_general_counselling_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coun_title"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_margin="40dp"
        android:textAlignment="center"
        android:textAllCaps="true"/>


    <EditText
        android:id="@+id/activity_general_counselling_improvement_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/imp"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="5"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:background="#b9ceeb"
        android:textColorHint="#233142" />

    <EditText
        android:id="@+id/activity_general_counselling_issue_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/iss"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="5"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:background="#b9ceeb"
        android:textColorHint="#233142"/>

    <EditText
        android:id="@+id/activity_general_counselling_suggestion_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sug"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="5"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:background="#b9ceeb"
        android:textColorHint="#233142"/>


    <Button
        android:id="@+id/activity_general_counselling_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/submit"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:background="#111d5e"
        android:textColor="#fff"/>



</LinearLayout>
