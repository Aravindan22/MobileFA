<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="100dp"
    android:paddingBottom="2dp"
    android:layout_margin="10dp"
    android:background="#deecfc"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
     >

    <TextView
        android:id="@+id/activity_event_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:text="@string/event_title"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />

        <Button
            android:id="@+id/activity_event_workshop_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#111d5e"
            android:textColor="#fff"
            android:text="@string/workshop_button"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_margin="10dp"/>


        <Button
            android:id="@+id/activity_event_course_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#111d5e"
            android:textColor="#fff"
            android:text="@string/course_button"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/activity_event_event_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#111d5e"
            android:textColor="#fff"
            android:text="@string/event_button"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_margin="10dp"/>

</LinearLayout>
