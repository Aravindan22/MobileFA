<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#b1e8ed"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textAllCaps="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="@string/reg_no"
        android:id="@+id/regno_edittext"
        android:inputType="number"
        android:layout_margin="10dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="@android:color/secondary_text_dark"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="@string/name"
        android:id="@+id/name_edittext"
        android:inputType="number"
        android:layout_margin="10dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="@android:color/secondary_text_dark" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="@string/email_id"
        android:id="@+id/emailid_edittext"
        android:inputType="number"
        android:layout_margin="10dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="@android:color/secondary_text_dark" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="@string/dept"
        android:id="@+id/dept_edittext"
        android:inputType="text"
        android:layout_margin="10dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="@android:color/secondary_text_dark"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/year_textview"
            android:layout_width= "300dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/year"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="@android:color/secondary_text_dark" />

        <Spinner
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/year_textview"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="5dp"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/year_spin"
            ></Spinner>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/section_textview"
            android:layout_width= "300dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/section"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="@android:color/secondary_text_dark"/>

        <Spinner
            android:id="@+id/section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/section_textview"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="5dp"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/section_spin"
            ></Spinner>

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="@string/password"
        android:id="@+id/password_edittext"
        android:inputType="text"
        android:layout_margin="10dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="@android:color/secondary_text_dark"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/reg"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/register_button"
        android:background="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ac"
        android:id="@+id/log_textview"
        android:layout_margin="5dp"
        android:gravity="end"/>

</LinearLayout>