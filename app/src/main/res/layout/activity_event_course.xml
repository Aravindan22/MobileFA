<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:theme="@style/Background">

    <TextView
        android:id="@+id/activity_event_course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_title"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_margin="40dp"
        android:textAlignment="center"
        android:theme="@style/Heading" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="@string/course_name"
        android:id="@+id/activity_event_course_topic_edittext"
        android:inputType="text"
        android:layout_margin="10dp"
        android:theme="@style/EditText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="@string/course_org"
        android:id="@+id/activity_event_course_org_edittext"
        android:inputType="text"
        android:layout_margin="10dp"
        android:theme="@style/EditText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="@string/course_mark"
        android:id="@+id/activity_event_course_marks_edittext"
        android:inputType="numberDecimal"
        android:layout_margin="10dp"
        android:theme="@style/EditText" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/activity_event_course_date_edittext"
        android:clickable="true"
        android:focusable="false"
        android:hint="@string/workshop_date"
        android:layout_margin="10dp"
        android:theme="@style/EditText" />

    <TextView
        android:id="@+id/activity_event_course_upload_info"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="3dp"
        android:text="@string/course_certificate"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/activity_event_course_upload_button"
        android:layout_width="110dp"
        android:layout_height="46dp"
        app:srcCompat="@drawable/ic_upload" />

    <Button
        android:id="@+id/activity_event_course_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/course_submit"
        android:textColor="@color/buttonText"
        android:textSize="25sp"
        android:textStyle="bold" />




</LinearLayout>
