<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".SelectCie"
    android:orientation="vertical"
    android:padding="5dp"
    android:theme="@style/Background" >

    <TextView
        android:id="@+id/activity_select_cie_semTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_sem"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:theme="@style/Heading" />

    <NumberPicker
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/activity_select_cie_semSpin"
        android:solidColor="#b9ceeb" />

    <TextView
        android:id="@+id/activity_select_cie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_cie"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:theme="@style/Heading" />

    <NumberPicker
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/activity_select_cie_cieSpin"
        android:solidColor="#b9ceeb" />

    <Button
        android:id="@+id/activity_select_cie_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_shape"
        android:padding="10dp"
        android:text="@string/select_cie_submit"
        android:gravity="center"
        android:textColor="@color/buttonText"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
